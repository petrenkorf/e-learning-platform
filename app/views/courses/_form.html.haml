-# frozen_string_literal: true
%div.container
  = simple_form_for(@course) do |f|
    = f.error_notification
    = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

    .form-inputs
      = f.input :title
      = f.rich_text_area :description

    .form-actions
      = f.button :submit
